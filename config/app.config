[
    %% SASL config
    {sasl, [
        {sasl_error_logger, {file, "log/sasl-error.log"}},
        {errlog_type, error},
        {error_logger_mf_dir, "log/sasl"},      % Log directory
        {error_logger_mf_maxbytes, 10485760},   % 10 MB max file size
        {error_logger_mf_maxfiles, 5}           % 5 files max
    ]},

    {lager, [
        {handlers, [
            {lager_console_backend, [
                {{lager_console_debug_level}},
                {lager_default_formatter, [
                    time," ", color, "[",severity,"]\e[0m [",
                    module, ":",function,":",pid,"] ",message,"\n"]}
            ]},
            {lager_file_backend, [
                {file, "log/error.log"},
                {level, error},
                {size, 10485760},
                {date, "$D0"},
                {count, 10}
            ]},
            {lager_file_backend, [
                {file, "log/notice.log"},
                {level, notice},
                {size, 10485760},
                {date, "$D0"},
                {count, 10}
            ]}
        ]},
        {colored, true},
        {async_threshold, 60},
        {async_threshold_window, 15},
        {error_logger_hwm, 150}
    ]},

    % lhttpc
    {lhttpc, [
        {pool_size, 10}
    ]},

    {simple_web_server, [
        {ip_address, {0,0,0,0}},
        {port, {{http_port}}},
        {workers, 5},
        {erlydtl_templates, [
            {"/templates/index.dtl", simple_web_server_templates_index}
        ]},

        {ddb_host, {{{ddb_host}}}},
        {ddb_port, {{ddb_port}}},

        {configuration_url, "{{configuration_url}}/simple-web-server/latest.txt"}
    ]},

    "releases/{{release_version}}/config/mc_redis.config"
].

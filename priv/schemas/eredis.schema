%%-*- mode: erlang -*-

%% @doc Redis host
{mapping, "redis.host", "eredis.host", [
    {datatype, string},
    {default, "{{redis_host}}"}
]}.

%% @doc Redis port
{mapping, "redis.port", "eredis.port", [
